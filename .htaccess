# Security Headers\n<IfModule mod_headers.c>\n    # Prevent MIME type sniffing\n    Header always set X-Content-Type-Options nosniff\n    \n    # Enable XSS protection\n    Header always set X-XSS-Protection \"1; mode=block\"\n    \n    # Prevent clickjacking\n    Header always set X-Frame-Options DENY\n    \n    # Referrer policy\n    Header always set Referrer-Policy \"strict-origin-when-cross-origin\"\n    \n    # Content Security Policy\n    Header always set Content-Security-Policy \"default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self'; connect-src 'self';\"\n</IfModule>\n\n# Disable directory browsing\nOptions -Indexes\n\n# Hide .htaccess files\n<Files .htaccess>\n    Order allow,deny\n    Deny from all\n</Files>\n\n# Hide sensitive files\n<Files ~ \"^.*\\.([Hh][Tt][Aa])\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n# Prevent access to sensitive files\n<Files \"config.php\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \"README.md\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \"package-lock.json\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \"package.json\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \"composer.lock\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \"yarn.lock\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \".env\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \".gitignore\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n<Files \".git\">\n    Order allow,deny\n    Deny from all\n</Files>\n\n# Block access to backup and log files\n<FilesMatch \"\\.(log|bak|backup|old)$\">\n    Order allow,deny\n    Deny from all\n</FilesMatch>\n\n# Block access to common private files\n<FilesMatch \"\\.(htaccess|htpasswd|ini|log|sh|sql|conf)$\">\n    Order allow,deny\n    Deny from all\n</FilesMatch>\n\n# Prevent access to editor temp files\n<FilesMatch \"(^#.*#|\\\\~|\\.tmp|\\.swp)$\">\n    Order allow,deny\n    Deny from all\n</FilesMatch>\n\n# Prevent access to sensitive directories\nRewriteEngine On\n\n# Block access to sensitive directories\nRewriteRule ^(\\.git|node_modules|vendor|bower_components)/ - [F,L]\nRewriteRule ^(/.env|config|database|private)/ - [F,L]\n\n# Block common attack patterns\nRewriteCond %{QUERY_STRING} (union.*select|insert.*into|update.*set|delete.*from|drop.*table|exec.*\\(|script|javascript|<iframe|onerror|onload|onclick|onmouseover|onfocus|base64|\\.php) [NC]\nRewriteRule .* - [F,L]\n\n# Block common malicious user agents\nRewriteCond %{HTTP_USER_AGENT} (sqlmap|nmap|nikto|dirbuster|dirb|w3af|nessus|acunetix|netsparker|arachni|openvas|webinspect|appscan|burp|zaproxy|\\.qc|\\.jrun|\\.jsf|\\.jsp|\\.do|\\.action|\\.asp|\\.aspx|\\.php|\\.pl|\\.cgi|\\.cfc|\\.cfm|\\.cfml|\\.phtml|\\.htaccess|\\.htpasswd|\\.config|\\.git|\\.svn|\\.DS_Store) [NC]\nRewriteRule .* - [F,L]\n\n# Prevent access to common backup extensions\n<FilesMatch \"\\.(zip|rar|tar|gz|tar\\.gz|7z|bak|backup)$\">\n    Order allow,deny\n    Deny from all\n</FilesMatch>\n\n# Prevent PHP execution in upload directories (if you have any)\n<FilesMatch \"\\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh)$\">\n    Order allow,deny\n    Deny from all\n</FilesMatch>\n\n# Limit file upload size (if applicable)\nLimitRequestBody 10485760\n\n# Prevent hotlinking of images and other media files\n# Uncomment the following lines if you want to prevent hotlinking\n# RewriteEngine On\n# RewriteCond %{HTTP_REFERER} !^$\n# RewriteCond %{HTTP_REFERER} !^https?://(www\\.)?yourdomain.com [NC]\n# RewriteRule \\.(jpg|jpeg|png|gif|bmp|mp4|avi|mov|flv|mp3|pdf|zip)$ - [F,NC,L]\n\n# Redirect HTTP to HTTPS (uncomment if you have SSL)\n# RewriteEngine On\n# RewriteCond %{HTTPS} off\n# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]\n\n# Block common exploits\nRewriteCond %{THE_REQUEST} \"^[A-Z]{3,9}\\s*.*\\s*HTTP/1\\.1|^[A-Z]{3,9}\\s*/.*\\s*(?:\\r\\n|\\n)\" [NC]\nRewriteRule .* - [F,L]\n\n# Block common SQL injection attempts\nRewriteCond %{QUERY_STRING} \"(%27)|(\\')|(;)|(%3B)|(\\\")|(%22)|(%3D)|(=)\" [NC]\nRewriteRule .* - [F,L]\n\n# Prevent access to common administrative interfaces\nRewriteRule ^(admin|administrator|wp-admin|wp-login|login|admin\\.php|login\\.php|administrator\\.php|admin\\.html|login\\.html|administrator\\.html)/ - [F,L]\n\n# Block access to common configuration files in subdirectories\n<DirectoryMatch \".*\">\n    <FilesMatch \"^config\\.(inc|php|txt)$\">\n        Order allow,deny\n        Deny from all\n    </FilesMatch>\n</DirectoryMatch>